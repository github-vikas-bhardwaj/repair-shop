{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "push": true,
    "requireBranch": "release/**"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": "npx lint-staged"
  }
}
